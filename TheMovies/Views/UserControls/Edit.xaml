<UserControl x:Class="TheMovies.Views.UserControls.Edit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheMovies.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Menu Background="Darkgray" Width="30">
            <MenuItem 
                Width="30" 
                Height="30" 
                Header="..." 
                FontSize="20"
                >
                <MenuItem Header="Rediger" FontSize="16" Command="{Binding EditCommand}"/>
                <MenuItem Header="Slet" FontSize="16" Command="{Binding DeleteCommand}"/>
            </MenuItem>

        </Menu>
    </Grid>
</UserControl>
